<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    tools:context=".before_login.login_admin"
    tools:ignore="ScrollViewCount">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/icetro_logo" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <EditText
            android:id="@+id/la_et_uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:text="admin@gmail.com"
            android:autofillHints=""
            android:hint="@string/username"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            tools:ignore="TextFields" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/la_et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:autofillHints=""
            android:layout_marginBottom="20dp"
            android:hint="@string/password"
            android:imeActionLabel="@string/shop_name"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:text="admin"
            android:textSize="20sp"
            tools:ignore="TextFields" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/login_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_yellow_button"
            android:padding="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/LOGIN"
            android:textColor="@color/White_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/create_new_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/round_light_yellow_button"
            android:gravity="center"
            android:text="@string/create_user"
            android:textColor="@color/light_grey"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/login_admin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />


</LinearLayout>