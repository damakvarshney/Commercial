<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_yellow</item>
        <item name="colorPrimaryDark">@color/main_yellow</item>
        <item name="colorAccent">#FF9800</item>
        <item name="icon">@drawable/full_circle_logo</item>
    </style>

    <!--    FullScreen Theme-->
    <style name="AppTheme.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--    New ActionBar-->

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_yellow</item>
        <item name="colorPrimaryDark">@color/main_yellow</item>
        <item name="colorAccent">#FF9800</item>
        <item name="icon">@drawable/full_circle_logo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/main_yellow</item>
        <item name="colorAccent">#FF9800</item>
    </style>

    <style name="notification_bar_only" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/main_yellow</item>
        <item name="android:colorAccent">#FF9800</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
